{
  "name": "stomper",
  "private": true,
  "version": "0.9.2",
  "scheduleVersion": "0.9.1",
  "main": "stomper.js",
  "repository": "https://github.com/maevsi/stomper.git",
  "author": "Jonas Thelemann <e-mail@jonas-thelemann.de>",
  "license": "TODO",
  "dependencies": {
    "@stomp/stompjs": "6.0.0",
    "camelcase-keys": "6.2.2",
    "consola": "2.15.3",
    "finalhandler": "1.1.2",
    "handlebars": "4.7.6",
    "html-to-text": "6.0.0",
    "nodemailer": "6.4.17",
    "pg": "8.5.1",
    "serve-static": "1.14.1",
    "snyk": "1.448.0",
    "websocket": "1.0.33"
  },
  "devDependencies": {
    "@commitlint/cli": "11.0.0",
    "@commitlint/config-conventional": "11.0.0",
    "@types/html-to-text": "6.0.0",
    "@types/node": "13.13.41",
    "@types/nodemailer": "6.4.0",
    "@typescript-eslint/eslint-plugin": "4.15.0",
    "@typescript-eslint/parser": "4.15.0",
    "eslint": "7.19.0",
    "eslint-config-standard": "16.0.2",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-standard": "4.1.0",
    "husky": "4.3.8",
    "mjml": "4.8.1",
    "ts-node-dev": "1.1.1",
    "typescript": "4.1.4"
  },
  "scripts": {
    "build": "tsc && ./scripts/mjml.sh",
    "dev": "sh parallel_commands 'tsnd --respawn ./src/stomper.ts' 'find ./src/email-templates/ -maxdepth 1 -type f -name ''*.mjml'' -print0 | xargs -0 mjml -o ./src/email-templates/ -w'",
    "start": "yarn run build && node ./dist/stomper.js",
    "snyk-protect": "snyk protect",
    "prepare": "yarn run snyk-protect",
    "test": "snyk test"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "find ./src/email-templates/ -maxdepth 1 -type f -name '*.mjml' -print0 | xargs -0 mjml -v {}"
    }
  },
  "snyk": true
}
