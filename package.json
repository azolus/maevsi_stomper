{
  "name": "stomper",
  "private": true,
  "version": "0.11.0",
  "scheduleVersion": "0.9.5",
  "main": "stomper.js",
  "repository": "https://github.com/maevsi/stomper.git",
  "author": "Jonas Thelemann <e-mail@jonas-thelemann.de>",
  "license": "TODO",
  "dependencies": {
    "@stomp/stompjs": "6.1.0",
    "camelcase-keys": "6.2.2",
    "consola": "2.15.3",
    "finalhandler": "1.1.2",
    "handlebars": "4.7.7",
    "handlebars-i18n": "1.1.1",
    "html-to-text": "7.0.0",
    "i18next": "19.9.1",
    "i18next-fs-backend": "1.1.0",
    "intl": "1.2.5",
    "nodemailer": "6.5.0",
    "pg": "8.5.1",
    "serve-static": "1.14.1",
    "snyk": "1.464.0",
    "websocket": "1.0.33"
  },
  "devDependencies": {
    "@commitlint/cli": "12.0.1",
    "@commitlint/config-conventional": "12.0.1",
    "@types/html-to-text": "6.0.0",
    "@types/i18next-fs-backend": "1.0.0",
    "@types/node": "13.13.45",
    "@types/nodemailer": "6.4.0",
    "@typescript-eslint/eslint-plugin": "4.15.2",
    "@typescript-eslint/parser": "4.15.2",
    "eslint": "7.21.0",
    "eslint-config-standard": "16.0.2",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "4.3.1",
    "eslint-plugin-standard": "4.1.0",
    "husky": "4.3.8",
    "mjml": "4.8.2",
    "ts-node-dev": "1.1.6",
    "typescript": "4.2.2"
  },
  "scripts": {
    "build": "tsc && ./scripts/mjml.sh",
    "dev": "sh parallel_commands 'cp ./src/assets/ ./dist/ -R' 'tsnd --inspect=0.0.0.0 --respawn ./src/stomper.ts' 'find ./src/email-templates/ -maxdepth 1 -type f -name ''*.mjml'' -print0 | xargs -0 mjml -o ./src/email-templates/ -w'",
    "start": "yarn run build && node ./dist/stomper.js",
    "snyk-protect": "snyk protect",
    "prepare": "yarn run snyk-protect",
    "test": "snyk test"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "find ./src/email-templates/ -maxdepth 1 -type f -name '*.mjml' -print0 | xargs -0 mjml -v {}"
    }
  },
  "snyk": true
}
